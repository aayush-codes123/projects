<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white pt-20">
  <!-- Adjust the top padding (pt-20) to account for the fixed navbar height -->
  <h1 class="text-xl">Create a new post</h1>
  <hr class="opacity-10 mt-2" />
  <form action="/createpost" method="post" enctype="multipart/form-data">
    <input class="block w-1/3 px-3 py-2" type="file" name="postimage">
    <input class="block w-1/3 px-3 py-2 text-black border-2 mt-2  rounded-md" type="text" placeholder="Title" name="title">
    <input class="block h-60 w-1/3 px-3 text-black py-2 border-2 mt-2  rounded-md" type="text" placeholder="Description" name="description">
    <input class="block w-1/3 px-3 py-2 mt-2 bg-red-700 rounded-md" type="submit" value="Create Post">
  </form>
</div>
