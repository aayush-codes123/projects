<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 pt-20 text-white">
    <!-- Added pt-20 for padding from the top -->
    <div class="cards flex flex-wrap gap-10">
        <% user.posts.forEach(function(elem){ %>
            <div class="card w-32">
                <div class="w-full h-40 rounded-lg">
                    <img class="w-full h-full object-cover overflow-hidden rounded-lg" src="/images/uploads/<%=elem.image %>" alt="">
                </div>
                <h5 class="mt-2 text-sm"><%= elem.title  %></h5>
            </div>
        <% }) %>

    </div>
</div>
<% include ./partials/footer.ejs %>
