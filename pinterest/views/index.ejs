<% include ./partials/header.ejs %>

<div class="w-full h-screen bg-center bg-cover bg-[url('https://images.unsplash.com/photo-1528459801416-a9e53bbf4e17?q=80&w=1012&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] flex items-center justify-center">
  <div class="w-[90vw] md:w-[60vw] lg:w-[40vw] xl:w-[30vw] h-auto bg-white px-8 md:px-14 lg:px-16 py-8 rounded-[20px] shadow-xl">

    <!-- Logo Section -->
    <div class="flex justify-center mb-6">
      <svg height="40" viewBox="-3 -3 82 82" width="40" style="display: block">
        <title>Pinterest logo</title>
        <circle cx="38" cy="38" fill="white" r="40"></circle>
        <path
          d="M27.5 71c3.3 1 6.7 1.6 10.3 1.6C57 72.6 72.6 57 72.6 37.8 72.6 18.6 57 3 37.8 3 18.6 3 3 18.6 3 37.8c0 14.8 9.3 27.5 22.4 32.5-.3-2.7-.6-7.2 0-10.3l4-17.2s-1-2-1-5.2c0-4.8 3-8.4 6.4-8.4 3 0 4.4 2.2 4.4 5 0 3-2 7.3-3 11.4C35.6 49 38 52 41.5 52c6.2 0 11-6.6 11-16 0-8.3-6-14-14.6-14-9.8 0-15.6 7.3-15.6 15 0 3 1 6 2.6 8 .3.2.3.5.2 1l-1 3.8c0 .6-.4.8-1 .4-4.4-2-7-8.3-7-13.4 0-11 7.8-21 22.8-21 12 0 21.3 8.6 21.3 20 0 12-7.4 21.6-18 21.6-3.4 0-6.7-1.8-7.8-4L32 61.7c-.8 3-3 7-4.5 9.4z"
          fill="red"
          fill-rule="evenodd"
        ></path>
      </svg>
    </div>

    <!-- Heading -->
    <h1 class="text-3xl text-center font-semibold tracking-tighter capitalize text-zinc-700 mb-6">
      Welcome to Pinterest
    </h1>

    <!-- Login Form -->
    <form action="/login" method="post">
      <input
        class="border-2 rounded-md block mt-2 w-full px-4 py-3 focus:outline-none focus:ring focus:ring-red-200"
        type="text"
        name="username"
        placeholder="Username"
      />
      <input
        class="border-2 rounded-md block mt-3 w-full px-4 py-3 focus:outline-none focus:ring focus:ring-red-200"
        type="password"
        name="password"
        placeholder="Password"
      />
      <a href="#" class="mt-2 inline-block text-sm font-semibold text-zinc-700 hover:underline">Forgot your password?</a>

      <!-- Submit Button -->
      <input
        class="mt-4 w-full px-4 py-3 bg-red-600 text-white font-bold rounded-full hover:bg-red-700 cursor-pointer"
        type="submit"
        value="Login"
      />
    </form>

    <!-- Terms and Register Links -->
    <p class="text-xs font-semibold text-zinc-700 mt-6 text-center">
      By continuing, you agree to Pinterest's <a href="#" class="underline hover:text-red-600">Terms of Service</a> and acknowledge you've read our <a href="#" class="underline hover:text-red-600">Privacy Policy</a>.
    </p>
    <a class="inline-block mt-7 text-sm font-semibold text-zinc-700 w-full text-center hover:underline" href="/register">Don't have an account?</a>
  </div>
</div>

